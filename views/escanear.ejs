<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/estilos.css">
  <title>Escanear producto</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/quagga/0.12.1/quagga.min.js"></script>
  <style>
    #scanner-container {
      width: 100%;
      max-width: 400px;
      margin: auto;
    }
    video {
      width: 100%;
    }
  </style>
</head>
<body>
  <h2>Escanear código de barras</h2>
  <div id="scanner-container"></div>
  <p id="resultado"></p>

  <script>
    Quagga.init({
      inputStream: {
        name: "Live",
        type: "LiveStream",
        target: document.querySelector('#scanner-container'),
        constraints: {
          facingMode: "environment" // cámara trasera
        }
      },
      decoder: {
        readers: ["ean_reader"] // o "code_128_reader" según tus códigos
      }
    }, function(err) {
      if (err) {
        console.error(err);
        return;
      }
      Quagga.start();
    });

    Quagga.onDetected(function(result) {
      const codigo = result.codeResult.code;
      document.getElementById("resultado").innerText = "Código detectado: " + codigo;
      window.location.href = "/productos?busqueda=" + codigo;
      Quagga.stop();
    });
  </script>
</body>
</html>
