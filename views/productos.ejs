<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Productos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/estilos.css">
</head>
<body class="p-4">
  <h2 class="text-center text-bg-primary p-3 rounded">Gestión de Productos</h2>
  <div class='row'><br>
    <div class="col-md-9">
  
    </div>
  </div>
  <form action="/productos/agregar" method="POST" >
    <div class="col-md-4">
      <select name="proveedor" class="form-select w-50" required>
        <option value="">-- Seleccione un Proveedor --</option>
      <% dvprov.forEach(rp => { %>
      <option value="<%= rp.seller %>"><%= rp.seller.toUpperCase() %></option>
      <% }) %>
      </select>
    </div>
    <div class="col-md-4">
      <input name="nombre" placeholder="Descripcion del producto" class="form-control w-50" required maxlength="30">
    </div>
    <div class="col-md-4">
      <input name="corta" placeholder="Descripcion Corta" class="form-control w-50" required maxlength="10">
    </div>
    <div class="col-md-4">
      <input name="codigo" placeholder="Codigo de Barras" class="form-control w-50" required maxlength="13">
    </div>
    <div class="col-md-4">
      <input name="categoria" placeholder="Categoria" class="form-control w-50" required maxlength="20">
    </div>
    <div class="col-md-4">
      <input name="sub_categoria" placeholder="Sub Categoria" class="form-control w-50" required maxlength="20">
    </div>
    </div>
    <div class="col-md-2"><br>
      <button type="submit" class="btn btn-success w-100">Agregar</button>
    </div>
  </form>

    <a href="/productos/importar" class="btn btn-secondary mt-3">Importar lista de productos desde un EXCEL</a><br>
    <br>
    <form class="row mb-3" action="/productos/buscarlo" method="GET">
    <div class="col-md-4">
    <input type="text" name="nombre" class="form-control" placeholder="Buscar por nombre..." value="<%= typeof nombre !== 'undefined' ? nombre : '' %>">
    </div>
    <div class="col-md-4">
    <input type="text" name="codigo" class="form-control" placeholder="Buscar por código de barras..." value="<%= typeof codigo !== 'undefined' ? codigo : '' %>">
    </div>
    <div class="col-md-4">
    <input type="text" name="categoria" class="form-control" placeholder="Buscar por Categoria..." value="<%= typeof categoria !== 'undefined' ? categoria : '' %>">
    </div>
    <div class="col-md-4">
    <input type="text" name="sub_categoria" class="form-control" placeholder="Buscar por Sub Categoria..." value="<%= typeof sub_categoria !== 'undefined' ? sub_categoria : '' %>">
    </div>
    <div class="col-md-2">
    <button type="submit" class="btn btn-primary w-100">Buscar</button>
    </div>
    <div class="col-md-2">
    <a href="/productos/buscarlo" class="btn btn-secondary w-100">Limpiar</a>
    </div>
    </form>
    <h5 class="text-white text-bg-danger text-center">(*) Se Pueden Modificar</h5>
    <h5 class="text-white text-bg-success text-center">Stock y Precios - Semodifican con los ingresos</h5>
  <table class="table table-bordered table-sm">
    <thead class="table-bordered">
      <tr>
        <th>ID</th><th>Proveedor</th><th>Nombre</th><th>Corta <span class="text-danger">(*)</span></th><th>Codigo de Barras</th><th>Categoria <span class="text-danger">(*)</span></th><th>Sub Categoria <span class="text-danger">(*)</span></th><th>Stock</th><th>Precio Lista</th><th>Acciones</th>
      </tr>
    </thead>
    <tbody>
  <% productos.forEach(p => { %>
    <form action="/productos/editar/<%= p.id %>" method="POST">
      <tr>
        <td><%= p.id %></td>
        <td><input name="proveedor" value="<%= p.proveedor.toUpperCase() %>" class="form-control form-control-sm" readonly></td>    
        <td><input name="nombre" value="<%= p.nombre.toUpperCase() %>" class="form-control form-control-sm" readonly></td>    
        <td><input name="corta" value="<%= p.corta.toUpperCase() %>" class="form-control form-control-sm" ></td>   
        <td><input name="codigo" value="<%= p.codigo %>" class="form-control form-control-sm" readonly></td>      
        <td><input name="categoria" value="<%= p.categoria.toUpperCase() %>" class="form-control form-control-sm" ></td>
        <td><input name="sub_categoria" value="<%= p.sub_categoria.toUpperCase() %>" class="form-control form-control-sm" ></td>
        <td><input name="stock" type="number" value="<%= p.stock %>" class="form-control form-control-sm" readonly></td>
        <td><input name="precio" type="number" value="<%= p.precio %>" class="form-control form-control-sm" readonly></td>
        <td class="d-flex gap-1">
          <button type="submit" class="btn btn-primary btn-sm">Guardar</button>
          <!--<a href="/productos/eliminar/<%= p.id %>" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar producto?')">Eliminar</a>
        -->
        </td>
      </tr>
    </form>
  <% }) %>
</tbody>

  </table>

  <a href="/dashboard" class="btn btn-secondary mt-3">Volver al dashboard</a>
</body>
</html>
