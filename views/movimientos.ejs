<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Movimientos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/estilos.css">
</head>
<body class="p-4">
  <h2 class="text-center text-bg-success">Registrar un Movimiento de Stock</h2><br>

  <form action="/movimientos/registrar" method="POST" >
    <div class="col-md-2">
      <select name="tipo" class="form-select" required>
        <option value="ingreso">Ingreso</option>
        <option value="egreso">Egreso</option>
      </select>
    </div>
    <div class="col-md-3">
      <select name="producto_id" class="form-select" required>
        <% productos.forEach(p => { %>
          <option value="<%= p.id %>"><%= p.nombre.toUpperCase() %> (<%= p.codigo %>)</option>
        <% }) %>
      </select>
    </div>
    <div class="col-md-2">
      <input type="number" name="cantidad" placeholder="Cantidad" class="form-control" required maxlength="5">
    </div>
    <div class="col-md-3">
      <input name="observacion" placeholder="ObservaciÃ³n" class="form-control" required maxlength="30">
    </div>
    <div class="col-md-1"><br>
      <button type="submit" class="btn btn-success w-100">Registrar</button>
    </div>
  </form>

  <h3 class="text-center text-xl">Historial de Movimientos</h3>
  <table class="table table-bordered table-sm">
    <thead class="table-light">
      <tr>
        <th>Fecha</th><th>Producto</th><th>Tipo</th><th>Cantidad</th><th>Obs.</th>
      </tr>
    </thead>
    <tbody>
      <% movimientos.forEach(m => { %>
        <tr>
          <td><%= m.fecha %></td>
          <td><%= m.producto_nombre %> (<%= m.codigo %>)</td>
          <td><%= m.tipo %></td>
          <td><%= m.cantidad %></td>
          <td><%= m.observacion %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/dashboard" class="btn btn-secondary mt-3">Volver al dashboard</a>
</body>
</html>
