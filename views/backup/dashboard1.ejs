<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h3>Bienvenido, <%= usuario %></h3>

  <div class="row my-4">
    <div class="col-md-3">
      <div class="card text-bg-primary">
        <div class="card-body">
          <h5>Total de Productos</h5>
          <p><%= totalProductos %></p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-bg-success">
        <div class="card-body">
          <h5>Total Unidades en Stock</h5>
          <p><%= totalUnidades %></p>
        </div>
      </div>
    </div>
  </div>

  <h4>Productos con Bajo Stock</h4>
  <table class="table table-bordered table-sm">
    <thead>
      <tr>
        <th>Producto</th><th>Stock</th><th>Mínimo</th>
      </tr>
    </thead>
    <tbody>
      <% productosBajoStock.forEach(p => { %>
        <tr>
          <td><%= p.nombre %></td>
          <td><%= p.stock %></td>
          <td><%= p.stock_minimo %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h4>Últimos 5 Movimientos</h4>
  <table class="table table-bordered table-sm">
    <thead>
      <tr>
        <th>Fecha</th><th>Producto</th><th>Tipo</th><th>Cantidad</th><th>Usuario</th>
      </tr>
    </thead>
    <tbody>
      <% ultimosMovimientos.forEach(m => { %>
        <tr>
          <td><%= m.fecha %></td>
          <td><%= m.producto_nombre %></td>
          <td><%= m.tipo %></td>
          <td><%= m.cantidad %></td>
          <td><%= m.usuario || 'N/D' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/movimientos" class="btn btn-secondary mt-3">Ir a Movimientos</a>
</body>
</html>
