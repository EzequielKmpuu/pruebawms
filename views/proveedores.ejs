<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Proveedores</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/estilos.css">
</head>
<body class="p-4">
  
  <h3>ABM - Gestión de Proveedores</h3>


  <form action="/proveedores/agregar" method="POST" class="row g-3 my-3">
    <div class="col-md-2">
      <input name="seller" placeholder="Proveedor" class="form-control" style="width: 300px;" required maxlength="30">
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-success w-100">Agregar</button>
    </div>
  </form>

  <table class="table table-bordered table-sm">
    <thead class="table-light">
      <tr>
        <th>ID</th><th>Proveedor</th>
      </tr>
    </thead>
    <tbody>
      <% seller.forEach(p => { %>
        <tr>
          <form action="/proveedores/editar/<%= p.id %>" method="POST">
            <td><%= p.id %></td>
            <td><input name="seller" value="<%= p.seller.toUpperCase() %>" class="form-control form-control-sm" ></td>
            
            <td class="d-flex gap-1" style="width: 300px;">
              <button type="submit" class="btn btn-primary btn-sm">Guardar</button>
              <a href="/proveedores/eliminar/<%= p.id %>" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar Proveedor?')">Eliminar</a>
            </td>
          </form>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/productos" class="btn btn-secondary mt-3">Productos</a>
  <a href="/dashboard" class="btn btn-secondary mt-3">Volver al dashboard</a>
</body>
</html>
